+"use client";
+
+import { motion } from "framer-motion";
+import { forwardRef } from "react";
+import { cn } from "@/lib/utils";
+
+export interface ButtonProps
+  extends React.ButtonHTMLAttributes<HTMLButtonElement> {
+  variant?: "primary" | "outline" | "ghost";
+  size?: "sm" | "md" | "lg";
+}
+
+export const Button = forwardRef<HTMLButtonElement, ButtonProps>(
+  ({ className, variant = "primary", size = "md", ...props }, ref) => {
+    const baseStyles =
+      "inline-flex items-center justify-center rounded-2xl font-semibold transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2";
+
+    const variants = {
+      primary:
+        "bg-gradient-to-r from-pink-500 via-blue-500 to-lime-400 text-black hover:brightness-110",
+      outline:
+        "border border-gray-600 text-gray-100 hover:bg-gray-800/30 hover:border-gray-400",
+      ghost:
+        "text-gray-300 hover:bg-gray-700/30 hover:text-white border border-transparent",
+    };
+
+    const sizes = {
+      sm: "px-3 py-1 text-sm",
+      md: "px-4 py-2 text-base",
+      lg: "px-6 py-3 text-lg",
+    };
+
+    return (
+      <motion.button
+        ref={ref}
+        whileTap={{ scale: 0.96 }}
+        whileHover={{ scale: 1.03 }}
+        className={cn(baseStyles, variants[variant], sizes[size], className)}
+        {...props}
+      />
+    );
+  }
+);
+
+Button.displayName = "Button";
